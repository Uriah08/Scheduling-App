generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schedule {
  id          String     @id @default(uuid())
  name        String
  description String?
  year        String
  semester    String
  courseAssignments CourseAssignment[]
  sections          Section[]
}

model Professor {
  id            String @id @default(uuid())
  firstName     String
  lastName      String
  middleInitial String?
  acadRank      String
  courseAssignments CourseAssignment[]
}

model Course {
  id            String @id @default(uuid())
  program       String
  code          String
  title         String
  creditLec     Int
  creditLab     Int @default(0)
  contactLec    Int
  contactLab    Int @default(0)
  prerequisites String[]
  year          String
  semester      String
  courseAssignments CourseAssignment[]
}

model Section {
  id          String @id @default(uuid())
  type        String
  year        String
  section     String
  schedule     Schedule @relation(fields: [scheduleId], references: [id])
  scheduleId   String
}

model Room {
  id    String @id @default(uuid())
  name  String @unique
}

model CourseAssignment {
  id          String    @id @default(uuid())
  schedule    Schedule  @relation(fields: [scheduleId], references: [id])
  scheduleId  String

  professor   Professor @relation(fields: [professorId], references: [id])
  professorId String

  course      Course    @relation(fields: [courseId], references: [id])
  courseId    String
}